---
import type { TournamentMetadata } from '../types';

interface Props {
  tournaments: TournamentMetadata[];
}

const { tournaments } = Astro.props;
---

{
  tournaments.length > 0 && (
    <div class="event-list-section">
      <div class="card event-list">
        <div class="event-list-header">
          <div>Events</div>
        </div>
        {tournaments.map((tournament) => (
          <div class="event-item">
            <div class="event-date">{tournament.dateDisplay}</div>
            <div class="event-meta">
              <span class="player-pill">üë§ {tournament.playerCount}</span>
              <span class="trophy-pill">üèÜ {tournament.trophyCount}</span>
              <span class="round-pill">‚öîÔ∏è {tournament.roundCount}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  )
}

<style>
  .event-list-section {
    margin-top: 3rem;
  }

  .event-list {
    background: white;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .event-list-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 1.5rem 2rem;
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
  }

  .event-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #e0e0e0;
    transition: all 0.2s ease;
  }

  .event-item:last-child {
    border-bottom: none;
  }

  .event-date {
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
  }

  .event-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .player-pill,
  .round-pill,
  .trophy-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-size: 0.9rem;
    font-weight: 600;
    white-space: nowrap;
    letter-spacing: 0.05em;
  }

  .player-pill {
    background: rgba(59, 130, 246, 0.15);
    color: #1e40af;
  }

  .round-pill {
    background: rgba(239, 68, 68, 0.15);
    color: #991b1b;
  }

  .trophy-pill {
    background: rgba(255, 215, 0, 0.15);
    color: #b8860b;
  }

  @media (max-width: 640px) {
    .event-list-header {
      padding: 1rem 1.5rem;
      font-size: 0.85rem;
    }

    .event-item {
      padding: 1.25rem 1.5rem;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .event-date {
      font-size: 1rem;
    }

    .event-meta {
      width: 100%;
      justify-content: flex-start;
    }

    .player-pill,
    .round-pill,
    .trophy-pill {
      font-size: 0.85rem;
    }
  }
</style>
