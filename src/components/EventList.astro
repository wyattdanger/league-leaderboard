---
import type { TournamentMetadata } from '../types';
import Tooltip from './Tooltip.astro';

interface Props {
  tournaments: TournamentMetadata[];
  isTop8s?: boolean;
}

const { tournaments, isTop8s = false } = Astro.props;

// Sort tournaments by date, newest first
const sortedTournaments = [...tournaments].sort((a, b) =>
  new Date(b.date).getTime() - new Date(a.date).getTime()
);

const recentTournaments = sortedTournaments.slice(0, 8);
const olderTournaments = sortedTournaments.slice(8);
const hasMore = olderTournaments.length > 0;
---

{
  tournaments.length > 0 && (
    <div class="event-list-section">
      <div class="card event-list">
        <div class="event-list-header">
          <div>Events</div>
        </div>
        <div class="events-container">
          {recentTournaments.map((tournament) => (
            <a href={`/event/${tournament.tournamentId}`} class="event-item">
              <div class="event-date">{tournament.dateDisplay}</div>
              {isTop8s && tournament.winnerDisplayName ? (
                <div class="event-winner">
                  <span class="winner-label">Winner:</span>
                  <span class="winner-name">üëë {tournament.winnerDisplayName}</span>
                </div>
              ) : (
                <div class="event-meta">
                  <Tooltip content={`${tournament.playerCount} ${tournament.playerCount === 1 ? 'player' : 'players'}`}>
                    <span class="player-pill">üë§ {tournament.playerCount}</span>
                  </Tooltip>
                  <Tooltip content={`${tournament.trophyCount} ${tournament.trophyCount === 1 ? 'player' : 'players'} went 3-0`}>
                    <span class="trophy-pill">üèÜ {tournament.trophyCount}</span>
                  </Tooltip>
                  <Tooltip content={`${tournament.roundCount} ${tournament.roundCount === 1 ? 'round' : 'rounds'} of Swiss`}>
                    <span class="round-pill">‚öîÔ∏è {tournament.roundCount}</span>
                  </Tooltip>
                </div>
              )}
            </a>
          ))}
          {hasMore && (
            <div class="older-events" style="display: none;">
              {olderTournaments.map((tournament) => (
                <a href={`/event/${tournament.tournamentId}`} class="event-item">
                  <div class="event-date">{tournament.dateDisplay}</div>
                  {isTop8s && tournament.winnerDisplayName ? (
                    <div class="event-winner">
                      <span class="winner-label">Winner:</span>
                      <span class="winner-name">üëë {tournament.winnerDisplayName}</span>
                    </div>
                  ) : (
                    <div class="event-meta">
                      <Tooltip content={`${tournament.playerCount} ${tournament.playerCount === 1 ? 'player' : 'players'}`}>
                        <span class="player-pill">üë§ {tournament.playerCount}</span>
                      </Tooltip>
                      <Tooltip content={`${tournament.trophyCount} ${tournament.trophyCount === 1 ? 'player' : 'players'} went 3-0`}>
                        <span class="trophy-pill">üèÜ {tournament.trophyCount}</span>
                      </Tooltip>
                      <Tooltip content={`${tournament.roundCount} ${tournament.roundCount === 1 ? 'round' : 'rounds'} of Swiss`}>
                        <span class="round-pill">‚öîÔ∏è {tournament.roundCount}</span>
                      </Tooltip>
                    </div>
                  )}
                </a>
              ))}
            </div>
          )}
        </div>
        {hasMore && (
          <div class="load-more-container">
            <div class="load-more-counter">
              Showing {recentTournaments.length} of {tournaments.length} events
            </div>
            <button class="load-more-btn" id="load-more-events">
              View More
            </button>
          </div>
        )}
      </div>
    </div>
  )
}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('load-more-events');
    if (btn) {
      btn.addEventListener('click', () => {
        const olderEvents = document.querySelector('.older-events') as HTMLElement;
        const loadMoreContainer = document.querySelector('.load-more-container') as HTMLElement;

        if (olderEvents) {
          olderEvents.style.display = 'block';
        }
        if (loadMoreContainer) {
          loadMoreContainer.style.display = 'none';
        }
      });
    }
  });
</script>

<style>
  .event-list-section {
    margin-top: 3rem;
  }

  .event-list {
    background: white;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .event-list-header {
    background: var(--gradient-primary);
    color: white;
    padding: 1.5rem 2rem;
    font-weight: 600;
    font-size: 0.9rem;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
  }

  .event-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #e0e0e0;
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .event-item:hover {
    background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  }

  .event-item:last-child {
    border-bottom: none;
  }

  .event-date {
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
  }

  .event-winner {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #ffd70020 0%, #ffa50020 100%);
    border-radius: 8px;
    border: 2px solid #ffd700;
  }

  .winner-label {
    font-size: 0.85rem;
    font-weight: 600;
    color: #b8860b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .winner-name {
    font-size: 1.05rem;
    font-weight: 700;
    color: #333;
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }

  .event-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .player-pill,
  .round-pill,
  .trophy-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-size: 0.9rem;
    font-weight: 600;
    white-space: nowrap;
    letter-spacing: 0.05em;
  }

  .player-pill {
    background: rgba(59, 130, 246, 0.15);
    color: #1e40af;
  }

  .round-pill {
    background: rgba(239, 68, 68, 0.15);
    color: #991b1b;
  }

  .trophy-pill {
    background: rgba(255, 215, 0, 0.15);
    color: #b8860b;
  }

  .load-more-container {
    padding: 1.5rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    border-top: 1px solid #e0e0e0;
  }

  .load-more-counter {
    color: #666;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .load-more-btn {
    background: var(--gradient-primary);
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .load-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .load-more-btn:active {
    transform: translateY(0);
  }

  @media (max-width: 640px) {
    .event-list-header {
      padding: 1rem 1.5rem;
      font-size: 0.85rem;
    }

    .event-item {
      padding: 1.25rem 1.5rem;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .event-date {
      font-size: 1rem;
    }

    .event-winner {
      padding: 0.4rem 0.75rem;
      gap: 0.5rem;
    }

    .winner-label {
      font-size: 0.75rem;
    }

    .winner-name {
      font-size: 0.95rem;
    }

    .event-meta {
      width: 100%;
      justify-content: flex-start;
    }

    .player-pill,
    .round-pill,
    .trophy-pill {
      font-size: 0.85rem;
    }
  }
</style>
