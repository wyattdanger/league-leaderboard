---
import type { HeadToHeadRecord } from '../types';
import { usernameToSlug } from '../utils/helpers';

interface Props {
  records: HeadToHeadRecord[];
}

const { records } = Astro.props;
---

<div class="h2h-container">
  {
    records.length > 0 ? (
      <div class="h2h-table-wrapper">
        <div class="h2h-title">Head-to-Head Records</div>
        <div class="h2h-table-container">
          <table class="h2h-table">
            <thead>
              <tr>
                <th>Opponent</th>
                <th>Matches</th>
                <th class="hide-tablet">Match Record</th>
                <th>Game Record</th>
                <th class="hide-mobile">Form</th>
              </tr>
            </thead>
            <tbody>
              {records.map((record, index) => {
                const mwPercentNum = record.matchWinPercentage;
                const isHighMWP = mwPercentNum > 0.59;
                const isMediumMWP = mwPercentNum > 0.39;
                const mwClass = isHighMWP ? 'wp-high' : isMediumMWP ? 'wp-medium' : 'wp-low';

                const gwPercentNum = record.gameWinPercentage;
                const isHighGWP = gwPercentNum > 0.59;
                const isMediumGWP = gwPercentNum > 0.39;
                const gwClass = isHighGWP ? 'wp-high' : isMediumGWP ? 'wp-medium' : 'wp-low';

                const opponentSlug = usernameToSlug(record.opponentUsername);
                const opponentUrl = `/player/${opponentSlug}`;
                const isHidden = index >= 8;

                return (
                  <tr class={isHidden ? 'hidden' : ''} onclick={`window.location.href='${opponentUrl}'`} style="cursor: pointer;">
                    <td>
                      <div class="opponent-name">{record.opponentDisplayName}</div>
                      <div class="opponent-username">@{record.opponentUsername}</div>
                    </td>
                    <td class="stat-value">{record.matchesPlayed}</td>
                    <td class="hide-tablet">
                      <div class="stat">
                        <div class="record">
                          {record.matchWins}-{record.matchLosses}-{record.matchDraws}
                        </div>
                        <div class={`percent-label ${mwClass}`}>
                          ({(record.matchWinPercentage * 100).toFixed(1)}%)
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="stat">
                        <div class="record">
                          {record.gameWins}-{record.gameLosses}-{record.gameDraws}
                        </div>
                        <div class={`percent-label ${gwClass}`}>
                          ({(record.gameWinPercentage * 100).toFixed(1)}%)
                        </div>
                      </div>
                    </td>
                    <td class="hide-mobile">
                      <div class="form">
                        {record.lastFiveResults.map((result) => (
                          <span class={`form-badge form-${result.toLowerCase()}`}>{result}</span>
                        ))}
                      </div>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>

        {records.length > 8 && (
          <div class="load-more-container" id="h2h-load-more-container">
            <div class="load-more-counter" id="h2h-load-more-counter">
              Showing 8 of {records.length}
            </div>
            <button class="load-more-btn" id="h2h-load-more-btn">
              View More
            </button>
          </div>
        )}
      </div>
    ) : (
      <p class="no-data">No head-to-head records available.</p>
    )
  }
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('h2h-load-more-btn');
    const container = document.getElementById('h2h-load-more-container');

    if (btn && container) {
      btn.addEventListener('click', () => {
        // Get all currently hidden rows and show them all
        const hiddenRows = document.querySelectorAll('.h2h-table tbody tr.hidden');
        hiddenRows.forEach((row) => {
          row.classList.remove('hidden');
        });

        // Hide the Load More container
        container.style.display = 'none';
      });
    }
  });
</script>

<style>
  .h2h-container {
    margin-top: 2rem;
  }

  .h2h-table-wrapper {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .h2h-title {
    padding: 1rem 1.5rem;
    background: var(--gradient-primary);
    color: white;
    font-weight: 600;
    font-size: 1rem;
  }

  .h2h-table-container {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .h2h-table {
    width: 100%;
    border-collapse: collapse;
  }

  .h2h-table thead {
    background: #f9fafb;
    color: #764ba2;
  }

  .h2h-table th {
    padding: 1rem 1.5rem;
    font-weight: 600;
    font-size: 0.85rem;
    text-align: center;
    border-bottom: 1px solid #e5e7eb;
    white-space: nowrap;
  }

  .h2h-table th:first-child {
    text-align: left;
  }

  .h2h-table td {
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #e5e7eb;
    text-align: center;
  }

  .h2h-table td:first-child {
    text-align: left;
  }

  .h2h-table tbody tr:hover {
    background-color: #f9fafb;
  }

  .h2h-table tbody tr.hidden {
    display: none;
  }

  .load-more-container {
    padding: 1.5rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    border-top: 1px solid #e5e7eb;
  }

  .load-more-counter {
    color: #666;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .load-more-btn {
    background: var(--gradient-primary);
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .load-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .load-more-btn:active {
    transform: translateY(0);
  }

  .opponent-name {
    font-size: 1rem;
    font-weight: 600;
    color: #1f2937;
  }

  .opponent-username {
    font-size: 0.85rem;
    color: #6b7280;
    margin-top: 0.15rem;
  }

  .stat-value {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1f2937;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .record {
    font-size: 0.95rem;
    color: #374151;
    font-weight: 500;
  }

  .percent-label {
    font-size: 0.85rem;
    font-weight: 500;
  }

  .wp-high {
    color: #10b981;
  }
  .wp-medium {
    color: #f59e0b;
  }
  .wp-low {
    color: #ef4444;
  }

  .form {
    display: flex;
    gap: 0.25rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .form-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 700;
    color: white;
  }

  .form-w {
    background-color: #10b981;
  }

  .form-l {
    background-color: #ef4444;
  }

  .form-d {
    background-color: #6b7280;
  }

  .no-data {
    text-align: center;
    color: white;
    font-size: 1.1rem;
    padding: 2rem;
  }

  @media (max-width: 1024px) {
    .hide-mobile {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .hide-tablet {
      display: none;
    }

    .h2h-table th,
    .h2h-table td {
      padding: 0.75rem 1rem;
      font-size: 0.85rem;
    }

    .opponent-name {
      font-size: 0.9rem;
    }

    .opponent-username {
      font-size: 0.75rem;
    }
  }
</style>
