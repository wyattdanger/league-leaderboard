---
import type { TournamentMetadata } from '../types';
import { loadDeckData, calculateMetagameBreakdown, hasCompleteDeckData } from '../utils/deckData';

interface Props {
  tournament: TournamentMetadata;
}

const { tournament } = Astro.props;

// Load deck data if available
const deckData = loadDeckData(tournament.tournamentId);
const showDeckData = hasCompleteDeckData(deckData);
const metagameBreakdown = showDeckData && deckData ? calculateMetagameBreakdown(deckData) : null;

// Generate colors for pie chart
const colors = [
  '#667eea', '#764ba2', '#f093fb', '#4facfe',
  '#43e97b', '#fa709a', '#fee140', '#30cfd0',
  '#a8edea', '#fed6e3', '#c471f5'
];

// Calculate cumulative percentages for pie chart segments
let cumulative = 0;
const segments = metagameBreakdown ? metagameBreakdown.map((item, index) => {
  const start = cumulative;
  cumulative += item.percentage;
  return {
    ...item,
    start,
    end: cumulative,
    color: colors[index % colors.length]
  };
}) : [];
---

<a href={`/event/${tournament.tournamentId}`} class="latest-event-callout">
  {metagameBreakdown && (
    <div class="pie-chart-container">
      <svg viewBox="0 0 100 100" class="pie-chart">
        {segments.map((segment) => {
          const startAngle = (segment.start / 100) * 360;
          const endAngle = (segment.end / 100) * 360;
          const largeArc = segment.percentage > 50 ? 1 : 0;

          const startX = 50 + 40 * Math.cos((startAngle - 90) * Math.PI / 180);
          const startY = 50 + 40 * Math.sin((startAngle - 90) * Math.PI / 180);
          const endX = 50 + 40 * Math.cos((endAngle - 90) * Math.PI / 180);
          const endY = 50 + 40 * Math.sin((endAngle - 90) * Math.PI / 180);

          return (
            <path
              d={`M 50 50 L ${startX} ${startY} A 40 40 0 ${largeArc} 1 ${endX} ${endY} Z`}
              fill={segment.color}
              class="pie-segment"
            />
          );
        })}
      </svg>
    </div>
  )}

  <span class="event-description">
    {tournament.playerCount} {tournament.playerCount === 1 ? 'player' : 'players'} gathered on {tournament.dateDisplay}
  </span>

  <span class="view-results">
    View Results â†’
  </span>
</a>

<style>
  .latest-event-callout {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    background: var(--gradient-primary);
    color: white;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    border: var(--border-subtle);
    text-decoration: none;
    transition: all 0.2s ease;
    margin-bottom: 2rem;
  }

  .latest-event-callout:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.3);
  }

  .pie-chart-container {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .pie-chart {
    width: 40px;
    height: 40px;
  }

  .pie-segment {
    transition: opacity 0.2s ease;
  }

  .event-description {
    font-size: 0.9375rem;
    line-height: 1.5;
    flex: 1;
    min-width: 0;
  }

  .view-results {
    font-size: 0.9375rem;
    font-weight: 600;
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* Compact desktop layout */
  @media (min-width: 1024px) {
    .latest-event-callout {
      padding: 0.75rem 1.25rem;
    }

    .pie-chart {
      width: 36px;
      height: 36px;
    }

    .event-description {
      font-size: 0.875rem;
    }

    .view-results {
      font-size: 0.875rem;
    }
  }

  @media (max-width: 640px) {
    .latest-event-callout {
      flex-wrap: wrap;
      padding: 1rem 1.25rem;
      gap: 0.75rem;
    }

    .event-description {
      font-size: 0.875rem;
      flex: 1;
      min-width: 0;
    }

    .view-results {
      width: 100%;
      text-align: center;
      padding-top: 0.5rem;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
    }
  }
</style>
