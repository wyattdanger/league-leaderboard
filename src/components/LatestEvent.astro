---
import InfoCallout from './InfoCallout.astro';
import type { TournamentMetadata } from '../types';

interface Props {
  tournament: TournamentMetadata;
}

const { tournament } = Astro.props;
---

<InfoCallout
  emoji="✨"
  href={`/event/${tournament.tournamentId}`}
  linkText="View Event →"
>
  {`${tournament.playerCount} ${tournament.playerCount === 1 ? 'player' : 'players'} gathered on ${tournament.dateDisplay}`}
</InfoCallout>
