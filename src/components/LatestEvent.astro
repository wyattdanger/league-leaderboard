---
import type { TournamentMetadata } from '../types';
import { loadDeckData, calculateMetagameBreakdown, hasCompleteDeckData } from '../utils/deckData';

interface Props {
  tournament: TournamentMetadata;
}

const { tournament } = Astro.props;

// Load deck data if available
const deckData = loadDeckData(tournament.tournamentId);
const showDeckData = hasCompleteDeckData(deckData);
const metagameBreakdown = showDeckData && deckData ? calculateMetagameBreakdown(deckData) : null;

// Generate colors for pie chart
const colors = [
  '#667eea', '#764ba2', '#f093fb', '#4facfe',
  '#43e97b', '#fa709a', '#fee140', '#30cfd0',
  '#a8edea', '#fed6e3', '#c471f5'
];

// Calculate cumulative percentages for pie chart segments
let cumulative = 0;
const segments = metagameBreakdown ? metagameBreakdown.map((item, index) => {
  const start = cumulative;
  cumulative += item.percentage;
  return {
    ...item,
    start,
    end: cumulative,
    color: colors[index % colors.length]
  };
}) : [];
---

<a href={`/event/${tournament.tournamentId}`} class="latest-event-callout">
  <div class="callout-header">
    <div class="header-left">
      <span class="latest-badge">Latest Event</span>
      <h2>{tournament.dateDisplay}</h2>
    </div>
    <div class="view-results">
      View Results ‚Üí
    </div>
  </div>

  <div class="callout-content">
    <div class="event-stats">
      {metagameBreakdown && (
        <div class="stat pie-stat">
          <div class="pie-chart-container">
            <svg viewBox="0 0 100 100" class="pie-chart">
              {segments.map((segment) => {
                const startAngle = (segment.start / 100) * 360;
                const endAngle = (segment.end / 100) * 360;
                const largeArc = segment.percentage > 50 ? 1 : 0;

                const startX = 50 + 40 * Math.cos((startAngle - 90) * Math.PI / 180);
                const startY = 50 + 40 * Math.sin((startAngle - 90) * Math.PI / 180);
                const endX = 50 + 40 * Math.cos((endAngle - 90) * Math.PI / 180);
                const endY = 50 + 40 * Math.sin((endAngle - 90) * Math.PI / 180);

                return (
                  <path
                    d={`M 50 50 L ${startX} ${startY} A 40 40 0 ${largeArc} 1 ${endX} ${endY} Z`}
                    fill={segment.color}
                    class="pie-segment"
                  />
                );
              })}
            </svg>
          </div>
          <span class="stat-label">Metagame</span>
        </div>
      )}
      <div class="stat">
        <span class="stat-icon">üë§</span>
        <span class="stat-value">{tournament.playerCount}</span>
        <span class="stat-label">Players</span>
      </div>
      <div class="stat">
        <span class="stat-icon">üèÜ</span>
        <span class="stat-value">{tournament.trophyCount}</span>
        <span class="stat-label">Trophies</span>
      </div>
      <div class="stat">
        <span class="stat-icon">‚öîÔ∏è</span>
        <span class="stat-value">{tournament.roundCount}</span>
        <span class="stat-label">Rounds</span>
      </div>
    </div>
  </div>
</a>

