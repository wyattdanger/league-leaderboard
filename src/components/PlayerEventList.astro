---
import type { PlayerTournamentPerformance } from '../types';

interface Props {
  performances: PlayerTournamentPerformance[];
}

const { performances } = Astro.props;

const recentPerformances = performances.slice(0, 8);
const olderPerformances = performances.slice(8);
const hasMore = olderPerformances.length > 0;

// Check if any performance has deck data
const hasDeckData = performances.some((perf) => perf.deck);
---

{
  performances.length > 0 && (
    <div class="player-event-list-section">
      <div class="card player-event-list">
        <div class="event-list-header">
          <div>Tournament History</div>
        </div>
        <div class={`event-table-header ${hasDeckData ? 'with-deck' : ''}`}>
          <div>Date</div>
          {hasDeckData && <div>Deck</div>}
          <div>Rank</div>
          <div>Record</div>
          <div>MWP</div>
          <div>Event</div>
        </div>
        <div class="events-container">
          {recentPerformances.map((perf) => {
            const mwpClass = perf.matchWinPercentage > 0.59 ? 'wp-high' : perf.matchWinPercentage > 0.39 ? 'wp-medium' : 'wp-low';
            const gwpClass = perf.gameWinPercentage > 0.59 ? 'wp-high' : perf.gameWinPercentage > 0.39 ? 'wp-medium' : 'wp-low';
            const isTrophy = perf.matchRecord === '3-0-0';

            return (
              <a href={`/event/${perf.tournamentId}`} class={`event-item ${hasDeckData ? 'with-deck' : ''}`}>
                <div class="event-date">{perf.dateDisplay}</div>
                {hasDeckData && <div class="event-deck">{perf.deck || '‚Äî'}</div>}
                <div class="event-rank">{isTrophy ? 'üèÜ' : perf.rank}</div>
                <div class="event-record">{perf.matchRecord}</div>
                <div class={`event-mwp ${mwpClass}`}>{(perf.matchWinPercentage * 100).toFixed(1)}%</div>
                <div class="event-meta">
                  <span class="player-pill">üë§ {perf.playerCount}</span>
                  <span class="trophy-pill">üèÜ {perf.trophyCount}</span>
                  <span class="round-pill">‚öîÔ∏è {perf.roundCount}</span>
                </div>
              </a>
            );
          })}
          {hasMore && (
            <div class="older-events" style="display: none;">
              {olderPerformances.map((perf) => {
                const mwpClass = perf.matchWinPercentage > 0.59 ? 'wp-high' : perf.matchWinPercentage > 0.39 ? 'wp-medium' : 'wp-low';
                const gwpClass = perf.gameWinPercentage > 0.59 ? 'wp-high' : perf.gameWinPercentage > 0.39 ? 'wp-medium' : 'wp-low';
                const isTrophy = perf.matchRecord === '3-0-0';

                return (
                  <a href={`/event/${perf.tournamentId}`} class={`event-item ${hasDeckData ? 'with-deck' : ''}`}>
                    <div class="event-date">{perf.dateDisplay}</div>
                    {hasDeckData && <div class="event-deck">{perf.deck || '‚Äî'}</div>}
                    <div class="event-rank">{isTrophy ? 'üèÜ' : perf.rank}</div>
                    <div class="event-record">{perf.matchRecord}</div>
                    <div class={`event-mwp ${mwpClass}`}>{(perf.matchWinPercentage * 100).toFixed(1)}%</div>
                    <div class="event-meta">
                      <span class="player-pill">üë§ {perf.playerCount}</span>
                      <span class="trophy-pill">üèÜ {perf.trophyCount}</span>
                      <span class="round-pill">‚öîÔ∏è {perf.roundCount}</span>
                    </div>
                  </a>
                );
              })}
            </div>
          )}
        </div>
        {hasMore && (
          <div class="load-more-container">
            <div class="load-more-counter">
              Showing {recentPerformances.length} of {performances.length} events
            </div>
            <button class="load-more-btn" id="load-more-player-events">
              View More
            </button>
          </div>
        )}
      </div>
    </div>
  )
}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('load-more-player-events');
    if (btn) {
      btn.addEventListener('click', () => {
        const olderEvents = document.querySelector('.older-events') as HTMLElement;
        const loadMoreContainer = document.querySelector('.load-more-container') as HTMLElement;

        if (olderEvents) {
          olderEvents.style.display = 'block';
        }
        if (loadMoreContainer) {
          loadMoreContainer.style.display = 'none';
        }
      });
    }
  });
</script>

<style>
  .player-event-list-section {
    margin-top: 2rem;
  }

  .player-event-list {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .event-list-header {
    background: var(--gradient-primary);
    color: white;
    padding: 1rem 1.5rem;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .event-table-header {
    display: grid;
    grid-template-columns: 2fr 0.8fr 1.2fr 1fr 2fr;
    gap: 1rem;
    padding: 1rem 2rem;
    background: #f9fafb;
    color: #764ba2;
    font-weight: 600;
    font-size: 0.85rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .event-table-header.with-deck {
    grid-template-columns: 2fr 1.5fr 0.8fr 1.2fr 1fr 2fr;
  }

  .event-table-header > div {
    text-align: left;
  }

  .event-table-header > div:nth-child(2),
  .event-table-header > div:nth-child(3),
  .event-table-header > div:nth-child(4) {
    text-align: center;
  }

  .event-item {
    display: grid;
    grid-template-columns: 2fr 0.8fr 1.2fr 1fr 2fr;
    gap: 1rem;
    align-items: center;
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #e5e7eb;
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .event-item.with-deck {
    grid-template-columns: 2fr 1.5fr 0.8fr 1.2fr 1fr 2fr;
  }

  .event-item:hover {
    background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  }

  .event-item:last-child {
    border-bottom: none;
  }

  .event-date {
    font-size: 1rem;
    font-weight: 600;
    color: #1f2937;
  }

  .event-deck {
    font-size: 0.95rem;
    font-weight: 600;
    color: #667eea;
  }

  .event-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .player-pill,
  .round-pill,
  .trophy-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .player-pill {
    background: rgba(59, 130, 246, 0.15);
    color: #1e40af;
  }

  .round-pill {
    background: rgba(239, 68, 68, 0.15);
    color: #991b1b;
  }

  .trophy-pill {
    background: rgba(255, 215, 0, 0.15);
    color: #b8860b;
  }

  .event-rank {
    font-size: 1rem;
    font-weight: 600;
    color: #6b7280;
    text-align: center;
  }

  .event-record {
    font-size: 1rem;
    font-weight: 600;
    color: #374151;
    text-align: center;
  }

  .event-mwp {
    font-size: 1rem;
    font-weight: 700;
    text-align: center;
  }

  .wp-high {
    color: #10b981;
  }
  .wp-medium {
    color: #f59e0b;
  }
  .wp-low {
    color: #ef4444;
  }

  .load-more-container {
    padding: 1.5rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    border-top: 1px solid #e5e7eb;
  }

  .load-more-counter {
    color: #666;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .load-more-btn {
    background: var(--gradient-primary);
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .load-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .load-more-btn:active {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .event-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
      padding: 1.25rem 1.5rem;
    }

    .event-right {
      width: 100%;
    }

    .event-performance {
      width: 100%;
      justify-content: space-between;
    }

    .rank-badge {
      font-size: 1.25rem;
      min-width: 40px;
    }

    .event-date {
      font-size: 0.95rem;
    }

    .event-meta {
      flex-wrap: wrap;
    }
  }
</style>
