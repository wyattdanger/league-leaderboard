---
import type { PlayerTournamentPerformance } from '../types';
import Tooltip from './Tooltip.astro';

interface Props {
  performances: PlayerTournamentPerformance[];
}

const { performances } = Astro.props;

const recentPerformances = performances.slice(0, 8);
const olderPerformances = performances.slice(8);
const hasMore = olderPerformances.length > 0;

// Check if any performance has deck data
const hasDeckData = performances.some((perf) => perf.deck);
---

{
  performances.length > 0 && (
    <div class="player-event-list-section">
      <div class="card player-event-list">
        <div class="event-list-header">
          <div>Tournament History</div>
        </div>
        <div class="event-table-container">
          <table class="event-table">
            <thead>
              <tr>
                <th>Date</th>
                {hasDeckData && <th>Deck</th>}
                <th>Rank</th>
                <th>Record</th>
                <th>MWP</th>
                <th>Event</th>
              </tr>
            </thead>
            <tbody>
              {recentPerformances.map((perf) => {
                const mwpClass = perf.matchWinPercentage > 0.59 ? 'wp-high' : perf.matchWinPercentage > 0.39 ? 'wp-medium' : 'wp-low';
                const isTrophy = perf.matchRecord === '3-0-0';

                return (
                  <tr onclick={`window.location.href='/event/${perf.tournamentId}'`} style="cursor: pointer;">
                    <td class="event-date">{perf.dateDisplay}</td>
                    {hasDeckData && <td class="event-deck">{perf.deck || '‚Äî'}</td>}
                    <td class="event-rank">{isTrophy ? 'üèÜ' : perf.rank}</td>
                    <td class="event-record">{perf.matchRecord}</td>
                    <td class={`event-mwp ${mwpClass}`}>{(perf.matchWinPercentage * 100).toFixed(1)}%</td>
                    <td class="event-meta">
                      <Tooltip content={`${perf.playerCount} ${perf.playerCount === 1 ? 'player' : 'players'}`}>
                        <span class="player-pill">üë§ {perf.playerCount}</span>
                      </Tooltip>
                      <Tooltip content={`${perf.trophyCount} ${perf.trophyCount === 1 ? 'player' : 'players'} went 3-0`}>
                        <span class="trophy-pill">üèÜ {perf.trophyCount}</span>
                      </Tooltip>
                      <Tooltip content={`${perf.roundCount} ${perf.roundCount === 1 ? 'round' : 'rounds'} of Swiss`}>
                        <span class="round-pill">‚öîÔ∏è {perf.roundCount}</span>
                      </Tooltip>
                    </td>
                  </tr>
                );
              })}
              {hasMore && olderPerformances.map((perf) => {
                const mwpClass = perf.matchWinPercentage > 0.59 ? 'wp-high' : perf.matchWinPercentage > 0.39 ? 'wp-medium' : 'wp-low';
                const isTrophy = perf.matchRecord === '3-0-0';

                return (
                  <tr class="older-event" style="display: none; cursor: pointer;" onclick={`window.location.href='/event/${perf.tournamentId}'`}>
                    <td class="event-date">{perf.dateDisplay}</td>
                    {hasDeckData && <td class="event-deck">{perf.deck || '‚Äî'}</td>}
                    <td class="event-rank">{isTrophy ? 'üèÜ' : perf.rank}</td>
                    <td class="event-record">{perf.matchRecord}</td>
                    <td class={`event-mwp ${mwpClass}`}>{(perf.matchWinPercentage * 100).toFixed(1)}%</td>
                    <td class="event-meta">
                      <Tooltip content={`${perf.playerCount} ${perf.playerCount === 1 ? 'player' : 'players'}`}>
                        <span class="player-pill">üë§ {perf.playerCount}</span>
                      </Tooltip>
                      <Tooltip content={`${perf.trophyCount} ${perf.trophyCount === 1 ? 'player' : 'players'} went 3-0`}>
                        <span class="trophy-pill">üèÜ {perf.trophyCount}</span>
                      </Tooltip>
                      <Tooltip content={`${perf.roundCount} ${perf.roundCount === 1 ? 'round' : 'rounds'} of Swiss`}>
                        <span class="round-pill">‚öîÔ∏è {perf.roundCount}</span>
                      </Tooltip>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
        {hasMore && (
          <div class="load-more-container">
            <div class="load-more-counter">
              Showing {recentPerformances.length} of {performances.length} events
            </div>
            <button class="load-more-btn" id="load-more-player-events">
              View More
            </button>
          </div>
        )}
      </div>
    </div>
  )
}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('load-more-player-events');
    if (btn) {
      btn.addEventListener('click', () => {
        const olderEvents = document.querySelectorAll('.event-table .older-event');
        const loadMoreContainer = btn.closest('.player-event-list')?.querySelector('.load-more-container') as HTMLElement;

        olderEvents.forEach((event) => {
          (event as HTMLElement).style.display = 'table-row';
        });

        if (loadMoreContainer) {
          loadMoreContainer.style.display = 'none';
        }
      });
    }
  });
</script>

<style>
  .player-event-list-section {
    margin-top: 2rem;
  }

  .player-event-list {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .event-list-header {
    background: var(--gradient-primary);
    color: white;
    padding: 1rem 1.5rem;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .event-table-container {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .event-table {
    width: 100%;
    border-collapse: collapse;
  }

  .event-table thead {
    background: #f9fafb;
    color: #764ba2;
  }

  .event-table th {
    padding: 1rem 2rem;
    font-weight: 600;
    font-size: 0.85rem;
    text-align: left;
    border-bottom: 1px solid #e5e7eb;
    white-space: nowrap;
  }

  .event-table td {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #e5e7eb;
    text-align: left;
  }

  .event-table tbody tr:hover {
    background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  }

  .event-date {
    font-size: 1rem;
    font-weight: 600;
    color: #1f2937;
    white-space: nowrap;
  }

  .event-deck {
    font-size: 0.95rem;
    font-weight: 600;
    color: #667eea;
    white-space: nowrap;
  }

  .event-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    white-space: nowrap;
  }

  .player-pill,
  .round-pill,
  .trophy-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .player-pill {
    background: rgba(59, 130, 246, 0.15);
    color: #1e40af;
  }

  .round-pill {
    background: rgba(239, 68, 68, 0.15);
    color: #991b1b;
  }

  .trophy-pill {
    background: rgba(255, 215, 0, 0.15);
    color: #b8860b;
  }

  .event-rank {
    font-size: 1rem;
    font-weight: 600;
    color: #6b7280;
    white-space: nowrap;
  }

  .event-record {
    font-size: 1rem;
    font-weight: 600;
    color: #374151;
    white-space: nowrap;
  }

  .event-mwp {
    font-size: 1rem;
    font-weight: 700;
    white-space: nowrap;
  }

  .wp-high {
    color: #10b981;
  }
  .wp-medium {
    color: #f59e0b;
  }
  .wp-low {
    color: #ef4444;
  }

  .load-more-container {
    padding: 1.5rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    border-top: 1px solid #e5e7eb;
  }

  .load-more-counter {
    color: #666;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .load-more-btn {
    background: var(--gradient-primary);
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .load-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .load-more-btn:active {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .event-table th,
    .event-table td {
      padding: 1rem 1.5rem;
    }

    .event-date {
      font-size: 0.95rem;
    }

    .event-meta {
      flex-wrap: wrap;
    }
  }
</style>
