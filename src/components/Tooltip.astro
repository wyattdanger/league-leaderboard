---
interface Props {
  content: string;
}

const { content } = Astro.props;
---

<div class="tooltip-container">
  <slot />
  <span class="tooltip">{content}</span>
</div>

<style>
  .tooltip-container {
    position: relative;
    display: inline-flex;
  }

  .tooltip {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-8px);
    padding: 0.5rem 0.75rem;
    background: hsl(0, 0%, 9%);
    color: hsl(0, 0%, 98%);
    font-size: 0.875rem;
    border-radius: 6px;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition:
      opacity 0.15s ease,
      transform 0.15s ease;
    z-index: 50;
  }

  .tooltip::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 4px solid transparent;
    border-top-color: hsl(0, 0%, 9%);
  }

  .tooltip-container:hover .tooltip {
    opacity: 1;
    transform: translateX(-50%) translateY(-4px);
  }
</style>
