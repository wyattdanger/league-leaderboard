---
import PageLayout from '../../components/PageLayout.astro';
import LeagueHeader from '../../components/LeagueHeader.astro';
import LeagueNav from '../../components/LeagueNav.astro';
import MetagameBreakdown from '../../components/MetagameBreakdown.astro';
import Tooltip from '../../components/Tooltip.astro';
import PlayoffBracket from '../../components/PlayoffBracket.astro';
import { getTournamentMetadata } from '../../utils/tournamentData';
import {
  loadDeckData,
  calculateMetagameBreakdown,
  hasSomeDeckData,
} from '../../utils/deckData';
import { loadLeaguesConfig } from '../../utils/data';
import { Tournament } from '../../models/Tournament';
import { Standing } from '../../models/Standing';
import { Match } from '../../models/Match';
import type { League } from '../../types';
import * as fs from 'fs';
import * as path from 'path';

export async function getStaticPaths() {
  const outputDir = path.join(process.cwd(), 'output');
  const tournamentDirs = fs.readdirSync(outputDir).filter((dir) => dir.startsWith('tournament_'));

  return tournamentDirs.map((dir) => {
    const tournamentId = dir.replace('tournament_', '');
    return {
      params: { tournamentId },
      props: { tournamentId },
    };
  });
}

const { tournamentId } = Astro.props;

// Load tournament using Tournament model
let tournament: Tournament;
try {
  tournament = Tournament.load(tournamentId);
} catch (error) {
  return Astro.redirect('/league/overall');
}

// Load leagues config and find which league this tournament belongs to
const config = loadLeaguesConfig();
const allLeagues = config.leagues;
const tournamentIdNum = parseInt(tournamentId, 10);
const currentLeague =
  allLeagues.find((league) => league.tournaments.includes(tournamentIdNum)) || null;

// Check if this tournament is a Top 8 for any league
const top8League = allLeagues.find((league) => league.top8Tournament === tournamentIdNum);

// If this is a Top 8, load the league standings to get player seeds
let playerSeeds: Map<string, number> = new Map();
if (top8League) {
  const leagueDir = path.join(process.cwd(), 'output', 'league');
  const safeName = top8League.name.toLowerCase().replace(/\s+/g, '_');
  const leagueFiles = fs.readdirSync(leagueDir)
    .filter(f => f.startsWith(`league_standings_${safeName}_`))
    .sort()
    .reverse(); // Most recent first

  if (leagueFiles.length > 0) {
    const standingsFile = path.join(leagueDir, leagueFiles[0]);
    const standingsData = JSON.parse(fs.readFileSync(standingsFile, 'utf-8'));

    // Get all players who participated in this Top 8 tournament
    const top8Players = new Set<string>();
    tournament.rounds.forEach(round => {
      round.matches.forEach(match => {
        if (match.player1) top8Players.add(match.player1.username);
        if (match.player2) top8Players.add(match.player2.username);
      });
    });

    // Get league ranks for players who actually played in the Top 8
    const playersWithRanks: Array<{ username: string; leagueRank: number }> = [];
    standingsData.forEach((standing: any) => {
      const username = standing.Team?.Players?.[0]?.Username;
      const rank = standing.Rank;
      if (username && rank && top8Players.has(username)) {
        playersWithRanks.push({ username, leagueRank: rank });
      }
    });

    // Sort by league rank and assign Top 8 seeds (1-8)
    playersWithRanks.sort((a, b) => a.leagueRank - b.leagueRank);
    playersWithRanks.forEach((player, index) => {
      playerSeeds.set(player.username, index + 1); // Seeds 1-8
    });
  }
}

// Calculate week number within the season if this is a regular tournament
let weekNumber: number | null = null;
if (currentLeague && !top8League) {
  const tournamentIndex = currentLeague.tournaments.indexOf(tournamentIdNum);
  if (tournamentIndex !== -1) {
    // Tournaments are listed newest first, so reverse the index
    weekNumber = currentLeague.tournaments.length - tournamentIndex;
  }
}

// Load deck data if available (show partial data)
const deckData = loadDeckData(tournamentId);
const showDeckData = hasSomeDeckData(deckData);

// Only show metagame breakdown if we have at least 16 players and at most 1 unknown deck
const playerCount = deckData ? Object.keys(deckData).length : 0;
const unknownDeckCount = deckData
  ? Object.values(deckData).filter((deck) => !deck || deck === '_' || deck === 'null').length
  : 0;
const showMetagameBreakdown = showDeckData && playerCount >= 16 && unknownDeckCount <= 1;
const metagameBreakdown = showMetagameBreakdown && deckData ? calculateMetagameBreakdown(deckData) : null;

// Get celebration data from tournament
const celebrationWinners = tournament.celebrationWinners;
const hasTrophies = tournament.hasTrophyWinners;

// Compute celebration messaging
const celebrationEmoji = hasTrophies ? (top8League ? 'üëë' : 'üèÜ') : 'üåü';

const celebrationTitle = hasTrophies
  ? top8League
    ? celebrationWinners.length === 1
      ? 'Belt Winner'
      : 'Belt Winners'
    : celebrationWinners.length === 1
      ? 'Trophy Winner'
      : 'Trophy Winners'
  : celebrationWinners.length === 1
    ? 'Top Finisher'
    : 'Top Finishers';

const celebrationMessage = hasTrophies
  ? top8League
    ? celebrationWinners.length === 1
      ? 'Congratulations to our league champion!'
      : 'Congratulations to our league champions!'
    : celebrationWinners.length === 1
      ? 'Congratulations to our undefeated champion!'
      : `Congratulations to our ${celebrationWinners.length} undefeated champions!`
  : celebrationWinners.length === 1
    ? 'Congratulations to our top finisher!'
    : 'Congratulations to our top finishers!';

const celebrationCardEmoji = hasTrophies ? 'üëë' : '‚≠ê';

// Load pre-generated Open Graph metadata
const metadataDir = path.join(process.cwd(), 'output', `tournament_${tournamentId}`);
const metadataFile = path.join(metadataDir, 'page_metadata.json');

let pageTitle = `NYC Premodern - ${tournament.dateDisplay} Meetup`;
let pageDescription = `${tournament.playerCount} players gathered`;

// Try to read pre-generated metadata if it exists
if (fs.existsSync(metadataFile)) {
  try {
    const metadata = JSON.parse(fs.readFileSync(metadataFile, 'utf-8'));
    pageTitle = metadata.title;
    pageDescription = metadata.description;
  } catch (error) {
    console.warn(`Failed to read metadata for tournament ${tournamentId}, using defaults`);
  }
}
---

<PageLayout
  title={pageTitle}
  description={pageDescription}
  ogTitle={pageTitle}
  ogDescription={pageDescription}
  ogUrl={`/event/${tournamentId}/`}
>
  <LeagueHeader />
  <LeagueNav currentLeague={currentLeague} allLeagues={allLeagues} isOverall={false} />

  <div class="card">
    <div class="event-profile-header">
      <div class="event-name-group">
        {top8League ? (
          <>
            <h1>{top8League.name} Top 8</h1>
            <div class="event-subheading">{tournament.dateDisplay}</div>
          </>
        ) : currentLeague && weekNumber ? (
          <>
            <h1>{currentLeague.name} Week {weekNumber}</h1>
            <div class="event-subheading">{tournament.dateDisplay}</div>
          </>
        ) : (
          <>
            <h1>Weekly</h1>
            <div class="event-subheading">{tournament.dateDisplay}</div>
          </>
        )}
      </div>
      {!top8League && (
        <div class="event-metadata">
          <Tooltip
            content={`${tournament.playerCount} ${tournament.playerCount === 1 ? 'player' : 'players'} attended`}
          >
            <div class="metadata-badge">
              üë§ {tournament.playerCount}
            </div>
          </Tooltip>
          <Tooltip
            content={`${tournament.trophyCount} ${tournament.trophyCount === 1 ? 'player' : 'players'} went 3-0`}
          >
            <div class="metadata-badge">
              üèÜ {tournament.trophyCount}
            </div>
          </Tooltip>
        </div>
      )}
    </div>

    <div class="event-content">
      {top8League ? (
        <>
          {/* Top 8 Tournament - Show Bracket */}
          <PlayoffBracket rounds={tournament.rounds} deckData={deckData} showDeckData={showDeckData} playerSeeds={playerSeeds} />
          {metagameBreakdown && <MetagameBreakdown breakdown={metagameBreakdown} />}
        </>
      ) : (
        <>
          {/* Regular Weekly - Show Standings and Rounds */}
          <div class="standings-section">
            <div class="standings-header">Final Standings</div>
            <div class="standings-table">
              <table>
                <thead>
                  <tr>
                    <th class="rank-col">Rank</th>
                    <th class="player-col">Player</th>
                    {showDeckData && <th class="deck-col">Deck</th>}
                    <th class="record-col">Record</th>
                    <th class="mwp-col">MWP</th>
                    <th class="gwp-col">GWP</th>
                    <th class="omw-col">OMW</th>
                    <th class="points-col">Pts</th>
                  </tr>
                </thead>
                <tbody>
                  {
                    tournament.finalStandings.map((standing: Standing) => {
                      const deck = showDeckData && deckData ? deckData[standing.player.username] : null;

                      return (
                        <tr
                          class="clickable-row"
                          onclick={`window.location.href='${standing.player.profileUrl}'`}
                        >
                          <td class="rank-col">
                            <div class="rank-number">{standing.rank}</div>
                          </td>
                          <td class="player-col">
                            <div class="player-display-name">{standing.player.displayName}</div>
                          </td>
                          {showDeckData && (
                            <td class="deck-col">
                              <div class="deck-name">{deck || '‚Äî'}</div>
                            </td>
                          )}
                          <td class="record-col">{standing.matchRecord}</td>
                          <td class={`mwp-col ${standing.matchWinPercentageClass}`}>
                            {standing.matchWinPercentageDisplay}%
                          </td>
                          <td class={`gwp-col ${standing.gameWinPercentageClass}`}>
                            {standing.gameWinPercentageDisplay}%
                          </td>
                          <td class={`omw-col ${standing.opponentMatchWinPercentageClass}`}>
                            {standing.opponentMatchWinPercentageDisplay}%
                          </td>
                          <td class="points-col">{standing.points}</td>
                        </tr>
                      );
                    })
                  }
                </tbody>
              </table>
            </div>
          </div>

          {metagameBreakdown && <MetagameBreakdown breakdown={metagameBreakdown} />}

          {tournament.rounds.map((round) => (
            <div class="round-card" key={round.number}>
              <div class="round-header">{round.displayLabel}</div>
              <div class="round-table-container">
                <table class="round-table">
                  <tbody>
                    {round.matches.map((match: Match) => {
                      const left = match.leftPlayer;
                      const right = match.rightPlayer;
                      const leftDeck =
                        showDeckData && deckData && left.player ? deckData[left.player.username] : null;
                      const rightDeck =
                        showDeckData && deckData && right.player
                          ? deckData[right.player.username]
                          : null;

                      // Format result string for display
                      let displayResult = match.resultString;
                      if (!match.isBye && match.isComplete) {
                        // For regular matches, show result from left player's perspective
                        displayResult = `${left.games}-${right.games}`;
                        if (match.gameDraws > 0) {
                          displayResult += `-${match.gameDraws}`;
                        }
                      }

                      return (
                        <tr class={match.isDraw ? 'draw-row' : ''}>
                          <td class="player-col player-left">
                            {left.player && (
                              <>
                                <a href={left.player.profileUrl} class="player-link">
                                  {left.player.displayName}
                                </a>
                                {showDeckData && (
                                  <div class="deck-name">{leftDeck || '\u00A0'}</div>
                                )}
                              </>
                            )}
                          </td>
                          <td class="result-col">
                            <span class="result-badge">{displayResult}</span>
                          </td>
                          <td class="player-col player-right">
                            {right.player ? (
                              <>
                                <a href={right.player.profileUrl} class="player-link">
                                  {right.player.displayName}
                                </a>
                                {showDeckData && (
                                  <div class="deck-name">{rightDeck || '\u00A0'}</div>
                                )}
                              </>
                            ) : (
                              <span class="bye-text">Bye</span>
                            )}
                          </td>
                        </tr>
                      );
                    })}
                  </tbody>
                </table>
              </div>
            </div>
          ))}
        </>
      )}

      {
        celebrationWinners.length > 0 && (
          <div class="trophy-celebration" id="trophy-celebration">
            <canvas id="confetti-canvas" />
            <div class={hasTrophies ? 'trophy-header' : 'top-finisher-header'}>
              {celebrationEmoji} {celebrationTitle} {celebrationEmoji}
            </div>
            <div class="trophy-content">
              <div class="trophy-message">{celebrationMessage}</div>
              <div class="trophy-winners-list">
                {celebrationWinners.map((winner: Standing) => {
                  const deck = showDeckData && deckData ? deckData[winner.player.username] : null;

                  return (
                    <a href={winner.player.profileUrl} class="trophy-winner-card">
                      <div class="trophy-winner-name">
                        <span class="trophy-emoji">{celebrationCardEmoji}</span>
                        {winner.player.displayName}
                      </div>
                      {deck && <div class="trophy-winner-deck">{deck}</div>}
                      <div class="trophy-winner-record">{winner.matchRecord}</div>
                    </a>
                  );
                })}
              </div>
            </div>
          </div>
        )
      }
    </div>
  </div>
</PageLayout>

