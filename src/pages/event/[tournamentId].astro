<script>
  document.addEventListener('DOMContentLoaded', () => {
    const trophyCelebration = document.getElementById('trophy-celebration');
    const canvas = document.getElementById('confetti-canvas');

    if (!trophyCelebration || !canvas) return;

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    let isAnimating = false;
    let triggerCount = 0;
    const confettiParticles: any[] = [];
    const colors = ['#ffd700', '#ffa500', '#ff6347', '#4169e1', '#32cd32', '#ff69b4'];

    // Set canvas size
    function resizeCanvas() {
      canvas.width = trophyCelebration.offsetWidth;
      canvas.height = trophyCelebration.offsetHeight;
    }
    resizeCanvas();
    window.addEventListener('resize', resizeCanvas);

    // Confetti particle class
    class Confetti {
      x: number;
      y: number;
      size: number;
      speedY: number;
      speedX: number;
      color: string;
      rotation: number;
      rotationSpeed: number;

      constructor(isSuper = false) {
        this.x = Math.random() * canvas.width;
        this.y = -20;
        this.size = isSuper ? Math.random() * 16 + 8 : Math.random() * 8 + 4;
        this.speedY = isSuper ? Math.random() * 5 + 3 : Math.random() * 3 + 2;
        this.speedX = Math.random() * 2 - 1;
        this.color = colors[Math.floor(Math.random() * colors.length)];
        this.rotation = Math.random() * 360;
        this.rotationSpeed = Math.random() * 10 - 5;
      }

      update() {
        this.y += this.speedY;
        this.x += this.speedX;
        this.rotation += this.rotationSpeed;

        if (this.y > canvas.height) {
          return false;
        }
        return true;
      }

      draw() {
        ctx.save();
        ctx.translate(this.x, this.y);
        ctx.rotate((this.rotation * Math.PI) / 180);
        ctx.fillStyle = this.color;
        ctx.fillRect(-this.size / 2, -this.size / 2, this.size, this.size);
        ctx.restore();
      }
    }

    function createConfetti() {
      for (let i = 0; i < 50; i++) {
        confettiParticles.push(new Confetti());
      }
    }

    function createSuperConfetti() {
      for (let i = 0; i < 150; i++) {
        confettiParticles.push(new Confetti(true));
      }
    }

    function animateConfetti() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      for (let i = confettiParticles.length - 1; i >= 0; i--) {
        const particle = confettiParticles[i];
        if (!particle.update()) {
          confettiParticles.splice(i, 1);
        } else {
          particle.draw();
        }
      }

      if (confettiParticles.length > 0) {
        requestAnimationFrame(animateConfetti);
      } else {
        isAnimating = false;
      }
    }

    function triggerConfetti() {
      triggerCount++;
      if (triggerCount % 5 === 0) {
        createSuperConfetti();
      } else {
        createConfetti();
      }
      if (!isAnimating) {
        isAnimating = true;
        animateConfetti();
      }
    }

    // Check if trophy section is visible
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting && entry.intersectionRatio > 0.5) {
            triggerConfetti();
          }
        });
      },
      { threshold: 0.5 }
    );

    observer.observe(trophyCelebration);
  });
</script>
