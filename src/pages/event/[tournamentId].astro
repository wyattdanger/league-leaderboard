---
import PageLayout from '../../components/PageLayout.astro';
import LeagueHeader from '../../components/LeagueHeader.astro';
import LeagueNav from '../../components/LeagueNav.astro';
import MetagameBreakdown from '../../components/MetagameBreakdown.astro';
import Tooltip from '../../components/Tooltip.astro';
import { getTournamentMetadata } from '../../utils/tournamentData';
import { loadDeckData, calculateMetagameBreakdown, hasCompleteDeckData } from '../../utils/deckData';
import { loadLeaguesConfig } from '../../utils/data';
import { Player } from '../../models/Player';
import { Standing } from '../../models/Standing';
import { Match } from '../../models/Match';
import type { League } from '../../types';
import * as fs from 'fs';
import * as path from 'path';

export async function getStaticPaths() {
  const outputDir = path.join(process.cwd(), 'output');
  const tournamentDirs = fs.readdirSync(outputDir).filter((dir) =>
    dir.startsWith('tournament_')
  );

  return tournamentDirs.map((dir) => {
    const tournamentId = dir.replace('tournament_', '');
    return {
      params: { tournamentId },
      props: { tournamentId },
    };
  });
}

const { tournamentId } = Astro.props;
const metadata = getTournamentMetadata(tournamentId);

if (!metadata) {
  return Astro.redirect('/league/overall');
}

// Load leagues config and find which league this tournament belongs to
const config = loadLeaguesConfig();
const allLeagues = config.leagues;
const currentLeague = allLeagues.find((league) =>
  league.tournaments.includes(tournamentId)
) || null;

// Check if this tournament is a Top 8 for any league
const top8League = allLeagues.find((league) =>
  league.top8Tournament === tournamentId
);

// Load final standings
const tournamentDir = path.join(process.cwd(), 'output', `tournament_${tournamentId}`);
const finalStandingsPath = path.join(tournamentDir, `Round_${metadata.roundCount}_Standings.json`);
const rawStandings = JSON.parse(fs.readFileSync(finalStandingsPath, 'utf-8'));

// Convert raw standings to Standing models
const standings = rawStandings.map((s: any) => Standing.fromMeleeStanding(s));

// Load deck data if available and complete
const deckData = loadDeckData(tournamentId);
const showDeckData = hasCompleteDeckData(deckData);
const metagameBreakdown = showDeckData && deckData ? calculateMetagameBreakdown(deckData) : null;

// Load match data for each round
const rounds = [];
for (let i = 1; i <= metadata.roundCount; i++) {
  const matchesPath = path.join(tournamentDir, `Round_${i}_Matches.json`);
  if (fs.existsSync(matchesPath)) {
    const rawMatches = JSON.parse(fs.readFileSync(matchesPath, 'utf-8'));
    const matches = rawMatches.map((m: any) => Match.fromMeleeMatch(m));
    const sortedMatches = Match.sortMatches(matches);
    rounds.push({ roundNumber: i, matches: sortedMatches });
  }
}

// Get celebration winners (trophy winners or top finishers) using Standing model
const celebrationWinners = Standing.getCelebrationWinners(standings);
const hasTrophies = Standing.hasTrophyWinners(standings);
const isTop8Tournament = currentLeague?.name === 'Top 8s';

// Compute celebration messaging
const celebrationEmoji = hasTrophies
  ? (isTop8Tournament ? 'üëë' : 'üèÜ')
  : 'üåü';

const celebrationTitle = hasTrophies
  ? isTop8Tournament
    ? celebrationWinners.length === 1 ? 'Belt Winner' : 'Belt Winners'
    : celebrationWinners.length === 1 ? 'Trophy Winner' : 'Trophy Winners'
  : celebrationWinners.length === 1 ? 'Top Finisher' : 'Top Finishers';

const celebrationMessage = hasTrophies
  ? isTop8Tournament
    ? celebrationWinners.length === 1
      ? 'Congratulations to our league champion!'
      : 'Congratulations to our league champions!'
    : celebrationWinners.length === 1
      ? 'Congratulations to our undefeated champion!'
      : `Congratulations to our ${celebrationWinners.length} undefeated champions!`
  : celebrationWinners.length === 1
    ? 'Congratulations to our top finisher!'
    : 'Congratulations to our top finishers!';

const celebrationCardEmoji = hasTrophies ? 'üëë' : '‚≠ê';
---

<PageLayout>
  <LeagueHeader />
  <LeagueNav currentLeague={currentLeague} allLeagues={allLeagues} isOverall={false} />

  <div class="card">
    <div class="event-profile-header">
      <div class="event-name-group">
        <h1>{top8League ? `${top8League.name} Top 8` : metadata.dateDisplay}</h1>
      </div>
      <div class="event-metadata">
        <Tooltip content={`${metadata.playerCount} ${metadata.playerCount === 1 ? 'player' : 'players'} attended`}>
          <div class="metadata-badge">
            üë§ {metadata.playerCount}
          </div>
        </Tooltip>
        <Tooltip content={`${metadata.trophyCount} ${metadata.trophyCount === 1 ? 'player' : 'players'} went 3-0`}>
          <div class="metadata-badge">
            üèÜ {metadata.trophyCount}
          </div>
        </Tooltip>
        <Tooltip content={`${metadata.roundCount} ${metadata.roundCount === 1 ? 'round' : 'rounds'} of Swiss`}>
          <div class="metadata-badge">
            ‚öîÔ∏è {metadata.roundCount}
          </div>
        </Tooltip>
      </div>
    </div>

    <div class="event-content">
      <div class="standings-section">
        <div class="standings-header">Final Standings</div>
        <div class="standings-table">
          <table>
            <thead>
              <tr>
                <th class="rank-col">Rank</th>
                <th class="player-col">Player</th>
                {showDeckData && <th class="deck-col">Deck</th>}
                <th class="record-col">Record</th>
                <th class="mwp-col">MWP</th>
                <th class="gwp-col">GWP</th>
                <th class="points-col">Pts</th>
              </tr>
            </thead>
            <tbody>
              {standings.map((standing: Standing) => {
                const deck = showDeckData && deckData ? deckData[standing.player.username] : null;

                return (
                  <tr class="clickable-row" onclick={`window.location.href='${standing.player.profileUrl}'`}>
                    <td class="rank-col">
                      <div class="rank-number">{standing.rank}</div>
                    </td>
                    <td class="player-col">
                      <div class="player-display-name">
                        {standing.player.displayName}
                      </div>
                    </td>
                    {showDeckData && (
                      <td class="deck-col">
                        <div class="deck-name">{deck || '‚Äî'}</div>
                      </td>
                    )}
                    <td class="record-col">{standing.matchRecord}</td>
                    <td class={`mwp-col ${standing.matchWinPercentageClass}`}>{standing.matchWinPercentageDisplay}%</td>
                    <td class={`gwp-col ${standing.gameWinPercentageClass}`}>{standing.gameWinPercentageDisplay}%</td>
                    <td class="points-col">{standing.points}</td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      </div>

      {metagameBreakdown && <MetagameBreakdown breakdown={metagameBreakdown} />}

      {rounds.map((round) => {
        return (
          <div class="round-card">
            <div class="round-header">Round {round.roundNumber}</div>
            <div class="round-matches">
              {round.matches.map((match: Match) => {
                const left = match.leftPlayer;
                const right = match.rightPlayer;
                const leftDeck = showDeckData && deckData && left.player ? deckData[left.player.username] : null;
                const rightDeck = showDeckData && deckData && right.player ? deckData[right.player.username] : null;

                return (
                  <div class="match-card">
                    <div class="match-content">
                      <div class="match-side left">
                        {left.player && (
                          <a href={left.player.profileUrl} class="match-player-name">
                            {left.player.displayName}
                          </a>
                        )}
                        {showDeckData && leftDeck && (
                          <div class="match-deck-name">{leftDeck}</div>
                        )}
                      </div>

                      <div class="match-vs">
                        <div class="match-game-wins left-wins">{left.games}</div>
                        <div class="swords">‚öîÔ∏è</div>
                        <div class="match-game-wins right-wins">{match.isBye ? '‚Äî' : right.games}</div>
                      </div>

                      <div class="match-side right">
                        {right.player ? (
                          <a href={right.player.profileUrl} class="match-player-name">
                            {right.player.displayName}
                          </a>
                        ) : (
                          <span class="match-bye-text">Bye</span>
                        )}
                        {showDeckData && rightDeck && (
                          <div class="match-deck-name">{rightDeck}</div>
                        )}
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        );
      })}

      {celebrationWinners.length > 0 && (
        <div class="trophy-celebration" id="trophy-celebration">
          <canvas id="confetti-canvas"></canvas>
          <div class={hasTrophies ? "trophy-header" : "top-finisher-header"}>
            {celebrationEmoji} {celebrationTitle} {celebrationEmoji}
          </div>
          <div class="trophy-content">
            <div class="trophy-message">
              {celebrationMessage}
            </div>
            <div class="trophy-winners-list">
              {celebrationWinners.map((winner: Standing) => {
                const deck = showDeckData && deckData ? deckData[winner.player.username] : null;

                return (
                  <a href={winner.player.profileUrl} class="trophy-winner-card">
                    <div class="trophy-winner-name">
                      <span class="trophy-emoji">{celebrationCardEmoji}</span>
                      {winner.player.displayName}
                    </div>
                    {deck && (
                      <div class="trophy-winner-deck">
                        {deck}
                      </div>
                    )}
                    <div class="trophy-winner-record">
                      {winner.matchRecord}
                    </div>
                  </a>
                );
              })}
            </div>
          </div>
        </div>
      )}
    </div>
  </div>
</PageLayout>

