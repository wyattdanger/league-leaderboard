---
import { loadLeaguesConfig } from '../utils/data';
import { leagueNameToSlug } from '../utils/helpers';

const config = loadLeaguesConfig();
const firstLeague = config.leagues[0];
const firstLeagueSlug = leagueNameToSlug(firstLeague.name);

// Redirect to the first league page
return Astro.redirect(`/league/${firstLeagueSlug}`);
