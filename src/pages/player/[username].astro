---
import PageLayout from '../../components/PageLayout.astro';
import LeagueHeader from '../../components/LeagueHeader.astro';
import LeagueNav from '../../components/LeagueNav.astro';
import PlayerLeagueStats from '../../components/PlayerLeagueStats.astro';
import PlayerDecks from '../../components/PlayerDecks.astro';
import HeadToHead from '../../components/HeadToHead.astro';
import PlayerEventList from '../../components/PlayerEventList.astro';
import Tooltip from '../../components/Tooltip.astro';
import { loadLeaguesConfig } from '../../utils/data';
import { usernameToSlug } from '../../utils/helpers';
import type { PlayerDetailData } from '../../types';
import * as fs from 'fs';
import * as path from 'path';

export async function getStaticPaths() {
  const playersDir = path.join(process.cwd(), 'output', 'players');

  if (!fs.existsSync(playersDir)) {
    console.warn('‚ö†Ô∏è  Players directory not found. Run: npm run player-stats');
    return [];
  }

  const files = fs.readdirSync(playersDir).filter((f) => f.startsWith('player_stats_'));

  const paths = files.map((file) => {
    const filePath = path.join(playersDir, file);
    const playerData: PlayerDetailData = JSON.parse(fs.readFileSync(filePath, 'utf-8'));
    const slug = usernameToSlug(playerData.username);

    return {
      params: { username: slug },
      props: { playerData },
    };
  });

  return paths;
}

const { playerData } = Astro.props;
const config = loadLeaguesConfig();
const allLeagues = config.leagues;

const mwpPercent = (playerData.overallStats.matchWinPercentage * 100).toFixed(1);
const gwpPercent = (playerData.overallStats.gameWinPercentage * 100).toFixed(1);

// Color classes for overall stats
const mwpNum = playerData.overallStats.matchWinPercentage;
const isHighMWP = mwpNum > 0.59;
const isMediumMWP = mwpNum > 0.39;
const mwpClass = isHighMWP ? 'stat-high' : isMediumMWP ? 'stat-medium' : 'stat-low';

const gwpNum = playerData.overallStats.gameWinPercentage;
const isHighGWP = gwpNum > 0.59;
const isMediumGWP = gwpNum > 0.39;
const gwpClass = isHighGWP ? 'stat-high' : isMediumGWP ? 'stat-medium' : 'stat-low';
---

<PageLayout>
  <LeagueHeader />
  <LeagueNav currentLeague={null} allLeagues={allLeagues} isOverall={false} />

  <div class="card player-profile-container">
    <div class="player-profile-header">
      <div class="player-name-group">
        <h1>{playerData.displayName}</h1>
        <div class="player-username">@{playerData.username}</div>
      </div>
      <div class="player-achievements">
        {
          playerData.overallStats.trophies > 0 && (
            <Tooltip
              content={`3-0 at ${playerData.overallStats.trophies} ${playerData.overallStats.trophies === 1 ? 'weekly' : 'weeklies'}`}
            >
              <div class="achievement-badge trophy-badge">
                üèÜ {playerData.overallStats.trophies}
              </div>
            </Tooltip>
          )
        }
        {
          playerData.overallStats.belts > 0 && (
            <Tooltip content="League champion">
              <div class="achievement-badge belt-badge">üëë {playerData.overallStats.belts}</div>
            </Tooltip>
          )
        }
      </div>
    </div>

    <div class="player-profile-content">
      <div class="overall-stats-container">
        <table class="overall-stats">
          <thead>
            <tr>
              <th>Tournaments</th>
              <th>Points</th>
              <th class="hide-mobile">Matches</th>
              <th>Match Record</th>
              <th>Game Record</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{playerData.overallStats.totalTournaments}</td>
              <td>{playerData.overallStats.totalPoints}</td>
              <td class="hide-mobile">{playerData.overallStats.totalMatches}</td>
              <td>
                <div class="stat-group">
                  <div class="stat-value">{playerData.overallStats.matchRecord}</div>
                  <div class={`stat-percent ${mwpClass}`}>{mwpPercent}%</div>
                </div>
              </td>
              <td>
                <div class="stat-group">
                  <div class="stat-value">{playerData.overallStats.gameRecord}</div>
                  <div class={`stat-percent ${gwpClass}`}>{gwpPercent}%</div>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <PlayerLeagueStats leagueStats={playerData.leagueStats} />

      <PlayerDecks deckStats={playerData.deckStats} />

      <HeadToHead records={playerData.headToHead} playerUsername={playerData.username} />

      <PlayerEventList performances={playerData.tournamentPerformances} />
    </div>
  </div>
</PageLayout>

<style>
  .player-profile-container {
    margin-bottom: 2rem;
  }

  .player-profile-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 2rem;
    background: var(--gradient-primary);
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
  }

  .player-name-group {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    flex: 1;
    justify-content: flex-start;
  }

  h1 {
    color: white;
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
  }

  .player-username {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.25rem;
    font-weight: 500;
  }

  .player-achievements {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }

  .achievement-badge {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    font-size: 1.25rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    backdrop-filter: blur(10px);
    cursor: help;
  }

  .player-profile-content {
    padding: 2rem;
  }

  .overall-stats-container {
    margin-bottom: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .overall-stats {
    width: 100%;
    border-collapse: collapse;
    background: white;
  }

  .overall-stats thead {
    background: #f9fafb;
    color: #764ba2;
  }

  .overall-stats th {
    padding: 1rem 1.5rem;
    font-weight: 600;
    font-size: 0.85rem;
    text-align: center;
    border-bottom: 1px solid #e5e7eb;
    white-space: nowrap;
  }

  .overall-stats td {
    padding: 1.5rem;
    text-align: center;
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f2937;
    white-space: nowrap;
  }

  .stat-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
  }

  .stat-value {
    font-size: 1rem;
    font-weight: 700;
    color: #1f2937;
  }

  .stat-percent {
    font-size: 0.9rem;
    font-weight: 600;
  }

  .stat-high {
    color: #10b981;
  }
  .stat-medium {
    color: #f59e0b;
  }
  .stat-low {
    color: #ef4444;
  }

  @media (max-width: 1024px) {
    .player-profile-content {
      padding: 1.5rem;
    }
  }

  @media (max-width: 640px) {
    .player-profile-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
      padding: 1rem 1.5rem;
    }

    h1 {
      font-size: 1.75rem;
    }

    .player-username {
      font-size: 1rem;
    }

    .player-profile-content {
      padding: 1rem;
    }

    .hide-mobile {
      display: none;
    }

    .overall-stats th {
      padding: 0.75rem 0.5rem;
      font-size: 0.75rem;
    }

    .overall-stats td {
      padding: 1rem 0.5rem;
      font-size: 1.1rem;
    }

    .stat-value {
      font-size: 0.9rem;
    }

    .stat-percent {
      font-size: 0.75rem;
    }
  }
</style>
